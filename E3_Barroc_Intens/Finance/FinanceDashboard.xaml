<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="E3_Barroc_Intens.FinanceDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E3_Barroc_Intens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Padding="0,5,0,0">Finance Dashboard</TextBlock>
            <!--<Button Margin="5,16,5,0" x:Name="Back" Content="terug" Click="FinanceDashboardButton_Click"/>-->
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="5,16,5,0" x:Name="AddInvoiceButton" Content="Facatuur aanmaken" Click="AddInvoiceButton_Click"/>
            <Button Margin="5,16,5,0" x:Name="LookInvoiceButton" Content="Facatuur inzien" Click="LookInvoiceButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
