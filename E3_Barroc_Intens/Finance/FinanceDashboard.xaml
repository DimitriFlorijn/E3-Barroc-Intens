<Page x:Class="E3_Barroc_Intens.FinanceDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:E3_Barroc_Intens"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Titel -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="10">
            <TextBlock Text="Finance Dashboard"
                       FontSize="24"
                       FontWeight="Bold" />
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Knoppen -->
            <StackPanel Grid.Row="0">
                <Button Style="{StaticResource ButtonStyle}"
                        x:Name="AddInvoiceButton"
                        Content="Factuur aanmaken"
                        Click="AddInvoiceButton_Click"
                        HorizontalAlignment="Center" />
                <TextBlock HorizontalAlignment="Center"
                           Text="Facturen"
                           FontSize="20"
                           Margin="0,0,0,20" />
            </StackPanel>

            <!-- Tabel Koppen -->
            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Factuur ID"
                           FontWeight="Bold"
                           Grid.Column="0"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Customer Name"
                           FontWeight="Bold"
                           Grid.Column="1"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Contract ID"
                           FontWeight="Bold"
                           Grid.Column="2"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Date Issued"
                           FontWeight="Bold"
                           Grid.Column="3"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Due Date"
                           FontWeight="Bold"
                           Grid.Column="4"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Total Amount"
                           FontWeight="Bold"
                           Grid.Column="5"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Is Paid"
                           FontWeight="Bold"
                           Grid.Column="6"
                           HorizontalAlignment="Center" />
            </Grid>

            <ListView x:Name="InvoicesList"
                      Grid.Row="2"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Id}"
                                       Grid.Column="0"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding Contract.Customer.Name}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding ContractId}"
                                       Grid.Column="2"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding DateIssued}"
                                       Grid.Column="3"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding DueDate}"
                                       Grid.Column="4"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding TotalAmount}"
                                       Grid.Column="5"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding IsPaid}"
                                       Grid.Column="6"
                                       HorizontalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

