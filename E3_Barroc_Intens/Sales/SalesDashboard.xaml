<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="E3_Barroc_Intens.SalesDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E3_Barroc_Intens"
    xmlns:localdata="using:E3_Barroc_Intens.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="20"
                        Grid.Row="0">
                <Button Style="{StaticResource ButtonStyle}"
                        x:Name="AddClientButton"
                        Content="Add Client"
                        Click="AddClientButton_Click"
                        HorizontalAlignment="Center" />
                <TextBlock HorizontalAlignment="Center"
                           Text="Clients"
                           FontSize="24" />
            </StackPanel>

            <ListView x:Name="ClientListView" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Location}" />
                            <TextBlock Text="{Binding Email}" />
                            <TextBlock Text="{Binding Number}" />
                            <TextBlock Text="{Binding BkrRegistered}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="20"
                        Grid.Row="0">
                <Button Style="{StaticResource ButtonStyle}"
                        x:Name="CreateNewAppointment"
                        Content="Add Client"
                        Click="CreateNewAppointment_Click"
                        HorizontalAlignment="Center" />
                <TextBlock HorizontalAlignment="Center"
                           Text="Appointments"
                           FontSize="24" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Client Name"
                           FontWeight="Bold"
                           Grid.Column="0" />
                <TextBlock Text="Date"
                           FontWeight="Bold"
                           Grid.Column="1" />
                <TextBlock Text="Notes"
                           FontWeight="Bold"
                           Grid.Column="2" />
            </Grid>

            <ListView Grid.Row="2"
                      x:Name="AppointmentListView"
                      ItemClick="AppointmentListView_ItemClick"
                      IsItemClickEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="localdata:Appointment">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Client.Name}"
                                       Grid.Column="0" />
                            <TextBlock Text="{x:Bind DateTime, Mode=OneTime}"
                                       Grid.Column="1" />
                            <TextBlock Text="{x:Bind Notes}"
                                       Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
 